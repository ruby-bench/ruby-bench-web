var drawReleaseChart = function(chartClass) {

  var charts = $(chartClass);
  if(charts.length === 1 && charts.data().columns.length === 2) {
    var chart = $(chartClass);
    var secondChart = chart.clone();

    chart.data().columns = [chart.data().columns[0]];
    secondChart.data().columns = [secondChart.data().columns[1]];
    secondChart.data().columns[0].visible = true;
    secondChart.data().unit = secondChart.data().columns[0].name.split('_').join(' ');

    chart.parent().children(':eq(1)').after(secondChart);
  }

  $(chartClass).each(function() {
    $this = $(this);

    if($this.length) {
      $this.highcharts({
        chart: {
          type: 'column',
          zoomType: 'x'
        },
        colors: ['#e34447', '#434348', '#90ed7d', '#f7a35c', '#8085e9', '#f15c80', '#e4d354', '#2b908f', '#f45b5b', '#91e8e1'],
        subtitle: {
          text: document.ontouchstart === undefined ? "<%= I18n.t('highcharts.subtitle.desktop') %>" : "<%= I18n.t('highcharts.subtitle.mobile') %>"
        },
        title: {
          text: ""
        },
        exporting: {
          enabled: false
        },
        tooltip: {
          useHTML: true,
          crosshairs: true,
          shared: true,
          positioner: function (labelWidth, labelHeight, point) {
            if ((this.chart.chartWidth / 2) > point.plotX ) {
              return { x: this.chart.chartWidth - labelWidth - 20, y: 50 };
            } else {
              return { x: 80, y: 50 };
            }
          },
          shadow: false,
          animation: false,
          shape: 'square'
        },
        xAxis: {
          categories: $this.data("categories"),
          labels: {
            rotation: -30,
            formatter: function () {
              return /Version: ([^<]+)/.exec(this.value)[1]
            }
          }
        },
        yAxis: {
          title: {
            text: $this.data("unit"),
          },
        },
        plotOptions: {
          column: {
            animation: false
          }
        },
        legend: {
          layout: 'horizontal',
          align: 'center',
          verticalAlign: 'bottom'
        },
        series: $this.data("columns")
      });
    }
  });
}

.container.contribute
  .row
    .col-md-10.col-md-offset-1
      %h1= t('.title')

      %hr
      
      %h4= t('.blurb')

      .row.contribute-section
        .col-md-12
          .row
            .col-md-12
              %p
                = t('.component_title')

          .row.contribute-row
            - %w{ruby_bench_web ruby_bench_docker ruby_bench_suite ruby_bench_server}.each do |repo|
              .col-sm-3.contribute-item
                %div{ class: "contribute-repo-logo repo-#{t(".#{repo}.repo_name")}" }
                = link_to t(".#{repo}.url"), target: '_blank', class: 'contribute-repo-link' do
                  %h3
                    = t(".#{repo}.name")
                %p
                  = t(".#{repo}.desc")

      .contribute-section
        %h3 Feature requests/discussion

        %p
          All discussion of features and directions for RubyBench will be done at
          = link_to AppSettings.forum_url, AppSettings.forum_url

= render 'title', title: t('.title', repo_name: @repo.name.capitalize)

%hr

.col-xs-4
  = render 'form',
      form_path: releases_repo_path(organization_name: @repo.organization.name, repo_name: @repo.name),
      name: 'releases'

.col-xs-8
  = render 'layouts/spinner'

  #chart-container
    = render 'show_releases_chart', charts: @charts,
        benchmark_type: @benchmark_type,
        benchmark_type_memory: @benchmark_type_memory
